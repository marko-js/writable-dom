{
  "name": "writable-dom",
  "version": "1.0.3",
  "description": "Utility to stream HTML content into a live document.",
  "keywords": [
    "dom",
    "html",
    "parser",
    "streaming",
    "writable"
  ],
  "homepage": "https://github.com/marko-js/writable-dom",
  "bugs": "https://github.com/marko-js/writable-dom/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/marko-js/writable-dom"
  },
  "license": "MIT",
  "author": "Dylan Piercey <dpiercey@ebay.com>",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "files": [
    "dist",
    "!**/__tests__",
    "!**/*.tsbuildinfo"
  ],
  "scripts": {
    "@ci:build": "npm run build",
    "@ci:lint": "eslint --format unix . && prettier . --check --log-level=warn",
    "@ci:release": "npm run build && changeset publish && npm ci",
    "@ci:test": "nyc npm test -- --forbid-pending --forbid-only",
    "@ci:version": "npm run build && npm run format && changeset version && npm i --package-lock-only",
    "build": "tsc -b && tsx build.mts",
    "change": "changeset add",
    "format": "eslint --format unix --fix .; prettier . --write --log-level=warn",
    "prepare": "husky",
    "release": "semantic-release",
    "report": "open ./coverage/lcov-report/index.html",
    "test": "cross-env NODE_ENV=test mocha 'src/**/__tests__/*.test.ts'",
    "test:update": "npm test -- --update"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.10",
    "@eslint/js": "^9.15.0",
    "@types/diff": "^6.0.0",
    "@types/diffable-html": "^5.0.2",
    "@types/istanbul-lib-instrument": "^1.7.7",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.0",
    "@types/prettier": "^3.0.0",
    "cross-env": "^7.0.3",
    "diff": "^7.0.0",
    "diffable-html": "^5.0.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.15.0",
    "eslint-formatter-unix": "^8.40.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "fast-glob": "^3.3.2",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "istanbul-lib-instrument": "^6.0.3",
    "lint-staged": "^15.2.10",
    "mocha": "^10.8.2",
    "mocha-snap": "^5.0.0",
    "nyc": "^17.1.0",
    "playwright": "^1.49.0",
    "prettier": "^3.4.1",
    "prettier-plugin-packagejson": "^2.5.6",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0"
  }
}
